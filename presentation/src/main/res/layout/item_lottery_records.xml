<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="13.5dp"
        android:paddingRight="13.5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gameName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="玩法名称"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/addPrizeTag"
                        android:layout_width="22dp"
                        android:layout_height="11dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="加奖"
                        android:textSize="8sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="03-21 20:13:12"
                    android:textColor="#999999"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/payCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="20.00元"
                android:textColor="#333333"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/goNext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/winInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:layout_toLeftOf="@id/goNext1"
                    android:text="中奖2345元"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/expand_option"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cyan"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
